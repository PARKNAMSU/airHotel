<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<select id="getBoard" resultType="kg.air.cnc.vo.BoardVO">
		SELECT *
		FROM imsi_board
		WHERE seq =
		#{seq}
	</select>
	
	<select id="getBoardCnt" parameterType="kg.air.cnc.vo.BoardVO" resultType="int">
    SELECT COUNT(*)
    FROM imsi_board
	</select>
	<select id="getBoardList" resultType="kg.air.cnc.vo.BoardVO">
		SELECT * FROM imsi_board
		ORDER BY seq DESC
	</select>

	<insert id="insertBoard" parameterType="kg.air.cnc.vo.BoardVO">
		INSERT INTO imsi_board (seq,
		title, writer, content)
		VALUES((select nvl(max(seq), 0)+1 from
		imsi_board),#{title},'관리자',#{content})
	</insert>
</mapper>
